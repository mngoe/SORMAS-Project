<?xml version="1.0" encoding="utf-8"?>
<androidx.wear.widget.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteOpaque"
    android:padding="@dimen/box_inset_layout_padding"
    tools:context=".HpActivity"
    tools:deviceIds="wear">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal"
                android:paddingLeft="@dimen/parentLayoutHorizontalPadding"
                android:paddingRight="@dimen/parentLayoutHorizontalPadding"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="196dp"
                    android:layout_height="156dp"
                    app:srcCompat="@drawable/logo_siseac" />

                <!-- SORMAS description texts -->

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/serviceMarginBottom">

                    <TextView
                        android:id="@+id/sub_heading_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/heading_alerte_precoce"
                        style="@style/LoginSubHeadingText" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:textAlignment="center">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="#FFFFFF"
                            android:orientation="vertical">

                            <ImageButton
                                android:id="@+id/imageButtonTache"
                                android:layout_width="111dp"
                                android:layout_height="84dp"
                                android:backgroundTint="#58a7e2"
                                android:onClick="taskClick"
                                android:tint="#FBFBFB"
                                app:srcCompat="@drawable/ic_drawer_user_task_blue_24dp" />

                            <TextView
                                android:id="@+id/textViewTache"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#58a7e2"
                                android:onClick="taskClick"
                                android:text="Tache"
                                android:textAlignment="center"
                                android:textColor="#FFF" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageButton
                                android:id="@+id/imageButton2"
                                android:layout_width="111dp"
                                android:layout_height="84dp"
                                android:backgroundTint="#58a7e2"
                                android:onClick="caseClick"
                                android:tint="#FBFBFB"
                                app:srcCompat="@drawable/ic_drawer_case_blue_24dp" />

                            <TextView
                                android:id="@+id/textViewCas"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#58a7e2"
                                android:onClick="caseClick"
                                android:text="Cas"
                                android:textAlignment="center"
                                android:textColor="#FFF" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:textAlignment="center">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="#FFFFFF"
                            android:orientation="vertical">

                            <ImageButton
                                android:id="@+id/imageButton3"
                                android:layout_width="111dp"
                                android:layout_height="84dp"
                                android:backgroundTint="#58a7e2"
                                android:onClick="mSersClick"
                                android:tint="#FBFBFB"
                                app:srcCompat="@drawable/ic_storage_blue_36dp" />

                            <TextView
                                android:id="@+id/textViewTache3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#58a7e2"
                                android:onClick="mSersClick"
                                android:text="mSers"
                                android:textAlignment="center"
                                android:textColor="#FFF" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageButton
                                android:id="@+id/imageButton4"
                                android:layout_width="111dp"
                                android:layout_height="84dp"
                                android:backgroundTint="#58a7e2"
                                android:onClick="statsClick"
                                android:tint="#FBFBFB"
                                app:srcCompat="@drawable/ic_drawer_assessment_blue_36dp" />

                            <TextView
                                android:id="@+id/textViewCas4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#58a7e2"
                                android:onClick="statsClick"
                                android:text="Stats"
                                android:textAlignment="center"
                                android:textColor="#FFF" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:textAlignment="center">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="#FFFFFF"
                            android:orientation="vertical">

                            <ImageButton
                                android:id="@+id/imageButton6"
                                android:layout_width="111dp"
                                android:layout_height="84dp"
                                android:backgroundTint="#58a7e2"
                                android:onClick="eventsClick"
                                android:tint="#FBFBFB"
                                app:srcCompat="@drawable/ic_alert_24dp" />

                            <TextView
                                android:id="@+id/textViewTache6"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#58a7e2"
                                android:text="Evenements"
                                android:textAlignment="center"
                                android:textColor="#FFF" />

                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/backgroundBottomLayout"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/logo_bottom"
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:layout_marginTop="0dp"
                        android:layout_gravity="bottom"
                        android:contentDescription="@string/description_sormas_logo"
                        android:src="@drawable/logo_bottom" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="SORMAS - https://sormas.org"/>

            </LinearLayout>


            <include
                android:id="@+id/notification_frame"
                layout="@layout/activity_root_notification_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </FrameLayout>

    </ScrollView>
</androidx.wear.widget.BoxInsetLayout>